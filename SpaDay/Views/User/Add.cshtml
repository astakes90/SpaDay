@using SpaDay.ViewModel

@model AddUserViewModel

<h1>Add New User</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" value="@ViewBag.username" name="username"/>
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@ViewBag.email" name="email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" name="password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">Confirm Password</label>
        <input asp-for="VerifyPassword" type="password" name="verifypassword"/>
        <span asp-validation-for="VerifyPassword"></span>
    </div>

    <input type="submit" value="submit" />
</form>

@if (ViewBag.error == "error")
{
    <h1>@ViewBag.error, passwords don't match!</h1>
}